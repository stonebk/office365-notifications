{
    "name": "Office 365 Notifications",
    "description": "Email and calendar notifications for Office 365.",
    "version": "0.1",
    "icons": {
        "256": "images/outlook_256.png",
        "128": "images/outlook_128.png",
        "48": "images/outlook_48.png",
        "32": "images/outlook_32.png"
    },
    "permissions": [
        "*://outlook.office365.com/*",
        "tabs",
        "notifications",
        "storage"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_title": "Office 365 Notifications",
        "default_icon": "images/outlook_32.png"
    },
    "manifest_version": 2,
    "web_accessible_resources": [
        "images/outlook_256.png"
    ],
    "options_page": "options.html"
}
